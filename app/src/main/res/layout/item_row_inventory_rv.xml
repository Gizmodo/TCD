<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/minTouchTargetSize"
    android:padding="4dp">

    <TextView
        android:id="@+id/txtInvCode"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:gravity="center|left"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12345" />

    <TextView
        android:id="@+id/txtInvName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:width="40dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@id/txtInvCode"
        app:layout_constraintEnd_toStartOf="@id/txtInvQuantity"
        app:layout_constraintStart_toEndOf="@id/txtInvCode"
        app:layout_constraintTop_toTopOf="@id/txtInvCode"
        tools:text="Название товара" />

    <TextView
        android:id="@+id/txtInvQuantity"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:gravity="center|right"
        app:layout_constraintBottom_toBottomOf="@id/txtInvName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtInvName"
        tools:ignore="RtlHardcoded"
        tools:text="12345" />
</androidx.constraintlayout.widget.ConstraintLayout>