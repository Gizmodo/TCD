<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="4dp"
    android:paddingTop="8dp"
    android:paddingEnd="4dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/txtInvCode"
        style="@style/customTextLabelAppearance"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        app:layout_constraintBottom_toBottomOf="@id/txtInvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtInvName"
        tools:ignore="RtlHardcoded"
        tools:text="78472" />

    <TextView
        android:id="@+id/txtInvName"
        style="@style/customTextLabelAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtInvQuantity"
        app:layout_constraintStart_toEndOf="@id/txtInvCode"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Конфета Волоконовская конфета молочная неглазированная 1кг/5шт (Белгородские кор" />

    <TextView
        android:id="@+id/txtInvQuantity"
        style="@style/customTextLabelAppearance"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:gravity="center|right"
        app:layout_constraintBottom_toBottomOf="@id/txtInvName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtInvName"
        tools:ignore="RtlHardcoded"
        tools:text="12345" />
</androidx.constraintlayout.widget.ConstraintLayout>