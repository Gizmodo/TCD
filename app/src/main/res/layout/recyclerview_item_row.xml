<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/itemCheckBox"
        android:layout_width="?attr/minTouchTargetSize"
        android:layout_height="?attr/minTouchTargetSize"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemCode"
        android:layout_width="50dp"
        android:layout_height="?attr/minTouchTargetSize"
        android:layout_marginStart="8dp"
        android:width="40dp"
        android:gravity="center_vertical"
        android:text="25877"
        app:layout_constraintBottom_toBottomOf="@+id/itemCheckBox"
        app:layout_constraintStart_toEndOf="@+id/itemCheckBox"
        app:layout_constraintTop_toTopOf="@+id/itemCheckBox" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="0dp"
        android:layout_height="?attr/minTouchTargetSize"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="01. Сахар, Соль, Сода1111111222233334455555555553333434343423232323232323232232323323222211112121212121212"
        app:layout_constraintBottom_toBottomOf="@+id/itemCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemCode"
        app:layout_constraintTop_toTopOf="@+id/itemCode" />


</androidx.constraintlayout.widget.ConstraintLayout>